{% extends 'base.html.twig' %}

{% block title %}{{ pay.getNomParLangue(app.request.locale) }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="mt-5">
            <h1>{{ pay.getNomParLangue(app.request.locale) }}</h1>
        </div>

        <div class="row mt-5 gx-5">
            <div class="col-12 col-lg-6 mb-5">
                <div id="map-eveche-show" class="container img-fluid rounded"></div>
            </div>
            <div class="col-12 col-lg-6 mb-5">
                <img class="img-fluid rounded" src="{{ asset('uploads/' ~ pay.imageUrl) }}" alt="">
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12 col-md-6">
                <div class="eveche-infos">
                    {% if app.request.locale == 'fr' %}
                    <div>
                        <p><span class="fw-bold">En breton</span> : {{ pay.nomBreton }}
                        {% if pay.nomGallo %}
                            <br><span class="fw-bold">En gallo</span> : {{ pay.nomGallo }}
                        {% endif %}
                        </p>
                    </div>
                {% endif %}

                {% if app.request.locale == 'br' %}
                    <div>
                        <p><span class="fw-bold">E galleg</span> : {{ pay.nomFrancais }}
                        {% if pay.nomGallo %}
                            <br><span class="fw-bold">E gallaoueg</span> : {{ pay.nomGallo }}</p>
                        {% endif %}
                    </div>
                {% endif %}

                {% if app.request.locale == 'go' %}
                    <div>
                        <p><span class="fw-bold">En français</span> : {{ pay.nomFrancais }}
                        <span class="fw-bold">En berton</span> : {{ pay.nomBreton }}</p>
                    </div>
                {% endif %}

                {{ pay.description }} 

                {% if is_granted('IS_AUTHENTICATED') %}
                <div class="pt-3">
                    <a class="btn btn-warning" href="{{ path('app_admin_pays_edit', {'id': pay.id}) }}">{% trans %}Modifier{% endtrans %}</a>
                </div>
                {% endif %}

                    <div class="back-list py-3">
                        <a class="btn" href="{{ path('app_pays_index') }}">{% trans %}Revenir à la liste des pays{% endtrans %}</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <p class="fs-4">{% trans %}Communes{% endtrans %}</p>
                <div class="pb-3 pt-2">
                    <div class="list-group">
                        <ul class="liste-eveche-show">
                            {% for commune in communes %}
                                <a class="d-flex justify-content-between align-items-center list-group-item list-group-item-action" href="{{ path('app_commune_show', {'id': commune.id, '_locale': app.request.locale}) }}">{{ commune.getNomParLangue(app.request.locale) }} 
                                    <small class="text-secondary">{{ commune.code }}</small>
                                </a>
                            {% else %}
                                {% trans %}Aucune commune à afficher{% endtrans %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}

{{ parent() }}

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        let nbHabitants;
        let color;
        let radius;

        function getColorByPopulation(nbHabitants) {
            return '#ff0000';
        }

        function getRadius(nbHabitants){
            if (nbHabitants <= 1000) {
                return 2;
            } else if (nbHabitants <= 2500){
                return 4;
            } else if (nbHabitants <= 5000){
                return 8;
            } else if (nbHabitants <= 10000){
                return 12;
            } else if (nbHabitants <= 50000){
                return 16;
            } else if (nbHabitants <= 100000){
                return 20;
            } else {
                return 24;
            }
        }

        var map = L.map('map-eveche-show').setView([47.9, -2.7 ], 8);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);


        {% for commune in pay.getCommunesParPays %}

        nbHabitants = {{ commune.habitants }} ;
        color = getColorByPopulation(nbHabitants);
        radius = getRadius(nbHabitants);

        L.circle([{{ commune.latitude }}, {{ commune.longitude }}], {
                        color: '#000000',
                        weight: 1,
                        fillColor: color,
                        radius: radius*220,
                        fillOpacity: 0.5
                    })
            .addTo(map)
            .bindPopup('<strong><a href="{{ path('app_commune_show', {'id': commune.id, '_locale': app.request.locale}) }}">{{ commune.getNomParLangue(app.request.locale)|escape("html") }}</a></strong>') 
