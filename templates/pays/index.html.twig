{% extends 'base.html.twig' %}

{% block title %}Pays index{% endblock %}

{% block body %}
    <h1>Pays index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_francais</th>
                <th>Nom_breton</th>
                <th>Nom_gallo</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays | sort((a, b) => a.nomFrancais <=> b.nomFrancais) %}
            <tr>
                <td>{{ pay.id }}</td>
                <td>{{ pay.nomFrancais }}</td>
                <td>{{ pay.nomBreton }}</td>
                <td>{{ pay.nomGallo }}</td>
                <td>{{ pay.description | raw }}</td>
                <td>
                    <a href="{{ path('app_pays_show', {'id': pay.id}) }}">show</a>
                    {% if app.user %}
                    <a href="{{ path('app_admin_pays_edit', {'id': pay.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_pays_new') }}">Create new</a>
{% endblock %}

