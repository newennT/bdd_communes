{% extends 'base.html.twig' %}

{% block title %}{% trans %}Connexion{% endtrans %}{% endblock %}

{% block body %}
    <div class="container my-5 login" style="min-height: 55vh;">
        <form method="post">

            {% if app.user %}
                <div class="mb-3">
                    {% trans %}Vous êtes connecté·e en tant que{% endtrans %} {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="mb-5">
            {% trans %}Connexion{% endtrans %}
            </h1>

            <div class="container p-5 border border-white rounded border-2 formulaire">
                <div>
                    <label for="username">{% trans %}Email{% endtrans %}</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="mt-3">
                    <label for="password">{% trans %}Mot de passe{% endtrans %}</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mt-4">
                    <button class="btn btn-lg" type="submit">
                        {% trans %}Se connecter{% endtrans %}
                    </button>
                </div>
            </div>
            
        </form>
    </div>
{% endblock %}
