{% extends 'base.html.twig' %}

{% set action = app.current_route == 'app_admin_eveche_new' ? 'Ajout' : 'Edition' %}

{% block title %}{{ action }} d'un évêché{% endblock %}

{% block body %}
    <h1>{{ action }} d'un évêché</h1>

    {{ include('admin/eveche/_form.html.twig') }}

    <a href="{{ path('app_eveche_index') }}">back to list</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('/js/tinymce/tinymce.min.js') }}" referrerpolicy="origin"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
    var textarea = document.querySelector('.tinymce');
    
    if (!textarea) {
        return;
    }

    if (textarea.style.display !== 'none' && !tinymce.get('eveche_description')) {
        tinymce.init({
            selector: '.tinymce',
            license_key: 'gpl'
        });
    }
});
</script>
{% endblock %}