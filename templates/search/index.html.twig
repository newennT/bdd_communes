{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}

        <div>
            {% if communes is empty %}
                <h4>Aucun résulat pour {{ query }}</h4>
            {% else %}
                <h3 class="mt-3">Vos résulats de recherche :</h3>
                {% for commune in communes %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        <a href="{{ path('app_commune_show', {'id': commune.id}) }}">
                                <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ commune.getNomParLangue(app.request.locale) }}</h6>
                                <div class="text-dark small p-1 rounded">
                                        Code postal : {{ commune.code }}
                                </div>
                        </a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

{% endblock %}