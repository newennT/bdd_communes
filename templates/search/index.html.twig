{% extends 'base.html.twig' %}

{% block title %}{% trans %}Recherche{% endtrans %}{% endblock %}

{% block body %}

        <div class="container pb-5" style="min-height: 65vh">
            {% if communes is empty %}
                <h1 class="pt-5">{% trans %}Aucun résulat pour{% endtrans %} "{{ query }}"</h1>
            {% else %}
                <h1 class="my-5">{% trans %}Résultats de recherche pour{% endtrans %} "{{ query }}" :</h1>
                {% for commune in communes %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        <a class="text-decoration-none" href="{{ path('app_commune_show', {'id': commune.id}) }}">
                            <p><span class="text-dark fs-4"> {{ commune.getNomParLangue(app.request.locale) }}</span>

                            <br><span class="text-secondary small">{{ commune.code }}</span></p>

                        </a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>




{% endblock %}