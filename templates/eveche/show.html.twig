{% extends 'base.html.twig' %}

{% block title %}Eveche{% endblock %}

{% block body %}
    <h1>Eveche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ eveche.id }}</td>
            </tr>
            <tr>
                <th>Nom_francais</th>
                <td>{{ eveche.nomFrancais }}</td>
            </tr>
            <tr>
                <th>Nom_breton</th>
                <td>{{ eveche.nomBreton }}</td>
            </tr>
            <tr>
                <th>Nom_gallo</th>
                <td>{{ eveche.nomGallo }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ eveche.description }}</td>
            </tr>
        </tbody>
    </table>

    <div id="map" style="height: 400px; width:400px;"></div>

    <p>Communes : </p>
    <ul>
        {% for commune in eveche.getCommunesParEveche %}
        <a href="{{ path('app_commune_show', {'id': commune.id}) }}"><li>{{ commune.nomFrancais }}</li></a>
        {% else %}
        L'évéché ne contient aucune commune
        {% endfor %}
    </ul>

    <a href="{{ path('app_eveche_index') }}">back to list</a>

    <a href="{{ path('app_admin_eveche_edit', {'id': eveche.id}) }}">edit</a>

{% endblock %}

